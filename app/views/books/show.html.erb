<%= render 'users/info',user:@user %>

<%= render 'books/new',book:@newbook %>

<h1>Book Dtail</h1>
<table>
  <tboby>
    <tr></tr>
    <th><%=attachment_image_tag @book.user, :profile_image,:fill,40,40 %></th>
    <th><%= @book.title %></th>
    <th><%= @book.body %></th>
  </tboby>
</table>

<div>
  <% if @book.user == current_user %>
<%=link_to "edit",edit_book_path(@book)%>
