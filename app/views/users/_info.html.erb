<h1>User info</h1>
<div><%=attachment_image_tag user,:profile_image,:fill,60,60 %></div>
<table>
  <tboby>
    <tr></tr>
    <th>name</th><br>
    <th><%= user.name%></th><br>
    <th>introduction</th><br>
    <th><%= user.introduction%></th>
  </tboby>
</table>
<div>
<% unless current_user == user %>
  <% if current_user.following?(user) %>
   <%= link_to "フォローを外す",user_relationships_path(user.id), method: :delete,class:"btn btn-primary" %>
  <% else %>
   <%= link_to "フォローする",user_relationships_path(user.id),method: :post,class:"btn btn-success" %>
  <% end %> 
<% end %>
</div>
<div><%=link_to "edit",edit_user_path(user.id)%></div>