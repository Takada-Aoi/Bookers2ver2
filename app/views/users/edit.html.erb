<h1>User info</h1>
<%= form_with model:@user,local:true do |f| %>
<label>name</label></br>
<%= f.text_field :name,autofocus:true %><br>
<label>image</label></br>
<%= attachment_image_tag @user,:profile_image,:fill,60,60 %>
<%= f.attachment_field :profile_image %><br>
<label>introduction</label></br>
<%= f.text_field :introduction,autofocus:true %>
<%= f.submit "update" %>

<% end %>
